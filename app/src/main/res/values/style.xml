<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_200</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="tabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="SpinnerTheme" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
    <item name="android:background">@drawable/spinner_bg</item>
    <item name="android:fontFamily">@font/poppins</item>
    <item name="android:textSize">@dimen/_7sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>