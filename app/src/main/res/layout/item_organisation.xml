<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:layout_gravity="center_horizontal"
    >

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/organisationImage"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:scaleType="centerCrop"
        app:roundPercent="1"
        android:src="@drawable/gym_workout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/organisationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organisation Name"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@id/organisationImage"
        app:layout_constraintStart_toStartOf="@id/organisationImage"
        app:layout_constraintTop_toBottomOf="@id/organisationImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>