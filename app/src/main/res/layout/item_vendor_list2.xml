<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_12sdp"
    android:background="@color/white"
    app:cardElevation="@dimen/_2sdp"
    app:cardBackgroundColor="@color/themeOrange_600"
    app:cardCornerRadius="@dimen/_15sdp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/vendorImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/login_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vendorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="Vendor Name"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            app:layout_constraintEnd_toStartOf="@id/vendorSince"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vendorImage" />

        <TextView
            android:id="@+id/vendorSince"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="(Since: 03-04-2022)"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/vendorName"
            app:layout_constraintTop_toTopOf="@id/vendorName"
            app:layout_constraintBottom_toBottomOf="@id/vendorName"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.9dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/lite_grey_100"
            android:layout_marginHorizontal="@dimen/_2sdp"
            app:layout_constraintTop_toBottomOf="@+id/vendorSince"
            />

        <TextView
            android:id="@+id/vendorGym"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Gym Name"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <TextView
            android:id="@+id/vendorGymDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Famous from 1990 we have weight loss expert"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/_7sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vendorGym"
            android:paddingBottom="@dimen/_10sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>