<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginVertical="@dimen/_7sdp"
    android:layout_marginHorizontal="@dimen/_6sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_20sdp"
    app:cardElevation="@dimen/_4sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_135sdp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_5sdp">

        <ImageView
            android:id="@+id/packageImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:scaleType="fitXY"
            android:src="@drawable/protein_box1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/packageName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingHorizontal="@dimen/_8sdp"
            android:text="Package name Package"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/packageImage" />

        <TextView
            android:id="@+id/packageDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:maxLines="2"
            android:paddingHorizontal="@dimen/_8sdp"
            android:gravity="start"
            android:text="Package DescriuptionPackage DescriuptionPackage DescriuptionPackage DescriuptionPackage DescriuptionPackage Descriuption"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/packageName" />

        <TextView
            android:id="@+id/listingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/poppins"
            android:maxLines="2"
            android:paddingStart="@dimen/_8sdp"
            android:text="$ 146"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/packageDesc" />

        <TextView
            android:id="@+id/sellingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="2"
            android:text="$146"
            android:textColor="@color/themeOrange"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintHorizontal_bias="0"
            android:paddingStart="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/listingPrice"
            app:layout_constraintTop_toBottomOf="@id/packageDesc" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>